{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug - Create Roadmap",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net8.0/ADOBuddyTool.dll",
            "args": [
                "--area-path",
                "SPOOL\\Resource Provider",
                "--roadmap"
            ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
